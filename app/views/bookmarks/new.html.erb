<div class="container my-3">
  <h1>Add bookmark to: <%= @list.name %></h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, collection: Movie.all %>
    <%= f.button :submit, class: "btn btn-primary my-3" %>
  <% end %>

  <%= link_to "Back to list", lists_path %>

</div>
